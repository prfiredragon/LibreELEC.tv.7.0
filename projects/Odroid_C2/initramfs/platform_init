#hdmimode=1080p60hz

# Parse command line arguments
for arg in $(cat /proc/cmdline); do
  case $arg in
    hdmimode=*)
      hdmimode="${arg#*=}"
      ;;
  esac
done

#echo $hdmimode > /sys/class/display/mode

# Set framebuffer geometry to match the resolution
case $hdmimode in
  480*)            X=720  Y=480  ;;
  576*)            X=720  Y=576  ;;
  720p*)           X=1280 Y=720  ;;
  *smpte*)         X=1280 Y=675  ;;
  *)               X=1920 Y=1080 ;;
esac

fbset -fb /dev/fb0 -g $X $Y 1920 2160 32
fbset -fb /dev/fb1 -g 32 32 32 32 32
# echo $hdmimode > /sys/class/display/mode
echo 0 > /sys/class/graphics/fb0/free_scale
echo 0 > /sys/class/graphics/fb1/free_scale
echo 1 > /sys/class/video/disable_video

# Enable scaling for 4K output
case $hdmimode in
  *smpte*)
    echo 0 0 1279 674  > /sys/class/graphics/fb0/free_scale_axis
    echo 0 0 4095 2159 > /sys/class/graphics/fb0/window_axis
    echo 1280 > /sys/class/graphics/fb0/scale_width
    echo 675  > /sys/class/graphics/fb0/scale_height
    echo 0x10001 > /sys/class/graphics/fb0/free_scale
  ;;
  4k*|2160*)
    echo 0 0 1919 1079 > /sys/class/graphics/fb0/free_scale_axis
    echo 0 0 3839 2159 > /sys/class/graphics/fb0/window_axis
    echo 1920 > /sys/class/graphics/fb0/scale_width
    echo 1080 > /sys/class/graphics/fb0/scale_height
    echo 0x10001 > /sys/class/graphics/fb0/free_scale
  ;;
esac

#echo $hdmimode > /sys/class/display/mode

# Enable first framebuffer
echo 0 > /sys/class/graphics/fb0/blank

# Disable second framebuffer
echo 1 > /sys/class/graphics/fb1/blank

# Disable framebuffer scaling
#echo 0 > /sys/class/graphics/fb0/free_scale
#echo 0 > /sys/class/graphics/fb1/free_scale

# set initial video state
echo 1 > /sys/class/video/disable_video

# Include deinterlacer into default VFM map
echo rm default > /sys/class/vfm/map
echo add default decoder ppmgr deinterlace amvideo > /sys/class/vfm/map

# Tweak HEVC playback
echo 8 >  /sys/module/amvdec_h265/parameters/buffer_mode
echo 16 > /sys/module/amvdec_h265/parameters/dynamic_buf_num_margin
echo 1 >  /sys/module/amvdec_h265/parameters/use_cma

# Attempt to fix MPEG-TS stream lost packet (HDMI-CEC irq issue)
# http://forum.odroid.com/viewtopic.php?p=155840#p155840
echo 2 > /proc/irq/231/smp_affinity

#  Turn off the annoying Blue Flashing LED on the C2
echo none > /sys/class/leds/blue:heartbeat/trigger

# Keep at least 64M RAM free
echo 65535 > /proc/sys/vm/extra_free_kbytes
